<link rel="stylesheet" href="~/css/update.css" asp-append-version="true">

<form id="createAdditionalDetails" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <table>
        <tbody>
            <tr>
                <td><b>Emergency Numbers:</b></td>
                <td>
                    <input type="text" name="EmergencyNumbers" id="EmergencyNumbers">
                </td>
            </tr>

            <tr>
                <td><b>Education:</b></td>
                <td>
                    <input type="text" name="Education" id="Education">
                </td>
            </tr>

            <tr>
                <td><b>Certifications:</b></td>
                <td>
                    <input type="file" name="Certifications" id="Certifications" accept="application/pdf">
                </td>
            </tr>

            <tr>
                <td><b>Personal Documents:</b></td>
                <td>
                    <input type="file" name="PersonalDocuments" id="PersonalDocuments" accept="application/pdf">
                </td>
            </tr>

            <tr>
                <td>
                    <button type="submit">Save</button>
                </td>

                <td>
                    <a id="cancelAdditionalDetails" href="#">Cancel</a>
                </td>
            </tr>
        </tbody>
    </table>
</form>