@using System.Security.Claims
@using ErpProject.Models
@model Employee

<link rel="stylesheet" href="~/CSS/update.css" asp-append-version="true">

<table>
        <tbody>
            <tr>
                <td><b>First Name:</b></td>
                <td>@Model.FirstName</td>
            </tr>

            <tr>
                <td><b>Last Name:</b></td>
                <td>@Model.LastName</td>
            </tr>

            <tr>
                <td><b>Email:</b></td>
                <td>@Model.Email</td>
            </tr>

            <tr>
                <td><b>Age:</b></td>
                <td>@Model.Age</td>
            </tr>

            <tr>
                <td><b>Date of Birth:</b></td>
                <td>@Model.DateOfBirth.ToString("dd-MM-yyyy")</td>
            </tr>

            <tr>
                <td><b>Nationality:</b></td>
                <td>@Model.Nationality</td>
            </tr>

            <tr>
                <td><b>Gender:</b></td>
                <td>@Model.Gender</td>
            </tr>

            <tr>
                <td><b>Phone Number:</b></td>
                <td>@Model.PhoneNumber</td>
            </tr>
            @if(User.Identity!.IsAuthenticated && (User.FindFirst(ClaimTypes.Role)?.Value == "Admin" || User.FindFirst(ClaimTypes.Role)?.Value == "Manager"))
            {
                <tr>
                    <td><a id="MDEditForm" href="#">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>