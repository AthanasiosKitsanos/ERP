@using ErpProject.Models
@model Employee

<link rel="stylesheet" href="~/CSS/update.css" asp-append-version="true">


<form method="post" asp-action="Update" asp-controller="Employee" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()

    <table>
        <tbody>
            <tr>
                <td><b>First Name:</b></td>
                <td>@Model.FirstName</td>
            </tr>

            <tr>
                <td><b>Last Name:</b></td>
                <td>@Model.LastName</td>
            </tr>

            <tr>
                <td><b>Email:</b></td>
                <td>
                    <input type="text" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email"></span>
                </td>
            </tr>

            <tr>
                <td><b>Age:</b></td>
                <td>@Model.Age</td>
            </tr>

            <tr>
                <td><b>Date of Birth:</b></td>
                <td>@Model.DateOfBirth.ToString("dd-MM-yyyy")</td>
            </tr>

            <tr>
                <td><b>Nationality:</b></td>
                <td>@Model.Nationality</td>
            </tr>

            <tr>
                <td><b>Gender:</b></td>
                <td>@Model.Gender</td>
            </tr>

            <tr>
                <td><b>Phone Number:</b></td>
                <td>
                    <input type="text" asp-for="@Model.PhoneNumber">
                    <span asp-validation-for="@Model.PhoneNumber"></span>
                </td>
            </tr>

            <tr>
                <td><button type="submit">Save</button></td>
                <td><a id="CancelMDForm" href="#">Cancel</a></td>
            </tr>
        </tbody>
    </table>
</form>