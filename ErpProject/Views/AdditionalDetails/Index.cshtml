@using System.Security.Claims
@using ErpProject.Models
@model AdditionalDetails

<link rel="stylesheet" href="~/css/update.css" asp-append-version="true">

<table>
    <tbody>
        <tr>
            <td><b>Emergency Numbers:</b></td>
            <td>@Model.EmergencyNumbers</td>
        </tr>

        <tr>
            <td><b>Education:</b></td>
            <td>@Model.Education</td>
        </tr>

        <tr>
            <td><b>Documents:</b></td>
            <td><a asp-action="Index" asp-controller="GeneralDocuments">Go to Page</a></td>
        </tr>
        
        @if(User.Identity!.IsAuthenticated && (User.FindFirst(ClaimTypes.Role)?.Value == "Admin" || User.FindFirst(ClaimTypes.Role)?.Value == "Manager"))
        {
            <tr>
                @if (string.IsNullOrEmpty(Model.Education) && string.IsNullOrEmpty(Model.EmergencyNumbers))
                {
                    <td><a id="AdRegistrationForm" href="#">Add Details</a></td>
                }
                else
                {
                    <td><a id="AdEditForm" href="#">Edit</a></td>
                }
            </tr>
        }
    </tbody>
</table>